<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="AliBaba Automation Test" parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="Windows"/>
    <parameter name="os_version" value="10"/>
    <parameter name="browserName" value="Chrome"/>
    <parameter name="browserVersion" value="62.0"/>
    <parameter name="url" value="https://www.homedepot.com/"/>

     <test name = "Home Depot 1" preserve-order="true">
        <classes>
             <class name="testCases.TestHomePage"/>
        </classes>
    </test>
    <test name = "Home Depot 2" preserve-order="true">
        <classes>
           <class name ="testCases.TestLoginPage"/>
        </classes>
    </test>
    <test name = "Home Depot 3" preserve-order="true">
        <classes>
            <class name="testCases.TestSearchPage"/>
        </classes>
    </test>
    <test name = "Home Depot 4" preserve-order="true">
        <classes>
            <class name = "testCases.TestFooterPage"/>
        </classes>
    </test>
    <test name = "Home Depot 5" preserve-order="true">
        <classes>
            <class name = "testCases.TestExcelFileReader"/>
        </classes>
    </test>
    <test name = "Home Depot 6" preserve-order="true">
        <classes>
            <class name = "testCases.TestGoogleSheetsReader"/>
        </classes>
    </test>
    <test name = "Home Depot 7" preserve-order="true">
        <classes>
            <class name="testKeyword.TestFeatures"/>
        </classes>
    </test>

</suite>